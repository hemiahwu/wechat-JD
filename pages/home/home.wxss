.search-container {
    position: fixed;
    display: flex;
    box-sizing: border-box;
    padding: 20rpx 30rpx;
    width: 100%;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
    transition:all .5s;
}

.active{
    background-color: rgba(255, 255, 255, 1);
    border-bottom: 1rpx solid #eee;
}

.active .search-input {
    border: 1rpx solid #ccc;
}

.active .search-input input {
    color: #aaa;
}

.search-container .search-icon{
    width: 40rpx;
    height: 40rpx;
}

.search-container .search-input {
    flex: 1;
    margin: 0 30rpx;
    background-color: rgba(255,255,255,.5);
    border-radius: 240rpx;
    font-size: 24rpx;
    padding: 2rpx 30rpx;
    padding-left: 60rpx;
    color:white;
    position: relative;
}

.search-container .search-input i{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: 20rpx;
    top: 50%;
    transform: translateY(-50%);
}

.search-container .search-input i image {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

.place-holder {
    color: #e0e0e0;
}

.search-container .search-icon image {
    width: 100%;
    height: 100%;
    vertical-align: sub;
}

.swiper-container {
    width: 100%;
    height: 350rpx;
}

.swiper-container swiper {
    width: 100%;
    height: 100%;
}

.swiper-container swiper image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* 导航 */

.navList {
    box-sizing: border-box;
    padding: 20rpx 0;
	display: flex;
	flex-wrap: wrap;
	justify-content: space-around;
}

.navList .nav-item {
    display: flex;
	flex-direction: column;
	align-items: center;
	width:150rpx; 
	height: 150rpx; 
}

.navList .nav-item .nav-icon {
    width: 95rpx;
    height: 95rpx;
}

.navList .nav-item text {
    padding-top: 10rpx;
    color: #aaa;
	font-size: 22rpx;
}

.page-margin{
  box-sizing: border-box;
  padding: 20rpx;
	margin-top: 20rpx;
  background-color: #fff;
  display: flex;
	flex-direction: column;
	align-items: center;
}

.theme_img{
  width:180rpx;
  height:40rpx;
}

.theme_more{
  height: 40rpx;
}

.theme_more text{
  margin-right: 2px; 
  font-size:22rpx;
  color: #aaa;
}

.theme_more image{
  width: 22rpx; 
  height:22rpx;
}

.page-row{
	display: flex;
	flex-direction: row;
	align-items: center;
  width:100%;
  justify-content:space-between;
}

.theme_scroll{
  width:100%; 
  margin-top:10rpx;
  white-space: nowrap;
}

.page-column{
	display: flex;
	flex-direction: column;
	align-items: center;
  padding:20rpx;
}

.page-column image{
  width:170rpx;
  height:170rpx;
}

.page-column text{
  font-size:32rpx;
  color:#FF0000; 
  margin-top:10rpx;
}

.page-row .page_img{
  min-width: 240rpx;
  max-width: 375rpx;
  min-height: 202rpx;
  max-height: 292rpx;
}

/* scroll-view 不显示滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}